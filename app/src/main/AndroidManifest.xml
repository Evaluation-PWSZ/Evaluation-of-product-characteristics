<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.memstacja.bottomnavigation">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BottomNavigation">

        <activity android:name=".MainActivity" />
        <activity android:name=".ui.login.RegisterActivity" />
        <activity android:name=".ui.dashboard.FeaturesOpen" />
        <activity android:name=".ui.dashboard.parts.PartsOpen" />
        <activity android:name=".ui.dashboard.features.FeaturesProductOpen" />
        <activity android:name=".ui.Creators.DegustationCreateActivity" />
        <activity android:name=".ui.Creators.PartsCreateActivity" />
        <activity android:name=".ui.Creators.FeaturesCreateActivity" />
        <activity android:name=".ui.Updators.DegustationUpdateActivity" />
        <activity android:name=".ui.Updators.ProductUpdateActivity" />
        <activity android:name=".ui.Updators.FeaturesUpdateActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>